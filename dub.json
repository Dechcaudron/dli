{
	"name": "dli",
	"authors": [
		"Héctor Barreras Almarcha @Dechcaudron"
	],
	"description": "A Command Line Interface library for D",
	"copyright": "Copyright © 2017, Héctor Barreras Almarcha",
	"license": "GPL-3.0",
	"targetPath": "bin",
	"importPaths": [
		"src",
		"../phobos"
	],
	"configurations": [
		{
			"name": "demo",
			"targetType": "executable"
		},
		{
			"name": "unittest",
			"targetType": "executable",
			"targetName": "tests",
			"preBuildCommands": [
				"dub run unit-threaded -c gen_ut_main -- -f bin/ut.d"
			],
			"mainSourceFile": "bin/ut.d",
			"excludedSourceFiles": [
				"src/demo.d"
			],
			"dependencies": {
				"unit-threaded": "~>0.7.11"
			}
		},
		{
			"name": "library",
			"targetType": "library"
		}
	],
	"homepage": "https://github.com/Dechcaudron/dli"
}